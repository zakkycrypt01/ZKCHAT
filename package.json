{
  "name": "zkchat-server",
  "version": "1.0.0",
  "description": "End-to-end encrypted messaging server with Walrus integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "circuit:generate-ptau": "chmod +x scripts/generate-powersoftau.sh && ./scripts/generate-powersoftau.sh",
    "circuit:build": "chmod +x scripts/build-circuit.sh && ./scripts/build-circuit.sh",
    "circuit:prove": "snarkjs groth16 fullprove",
    "circuit:verify": "snarkjs groth16 verify",
    "postinstall": "npm run circuit:generate-ptau && npm run circuit:build"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.8.9",
    "axios": "^1.6.0",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "ffjavascript": "^0.2.55",
    "mongoose": "^8.15.0",
    "snarkjs": "^0.7.0",
    "socket.io": "^4.7.2",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0"
  }
}
